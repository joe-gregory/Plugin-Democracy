<%- include('./partials/head.ejs') %>
<%- include('./partials/navigation.ejs') %>

    <h1 class="pageTitle">Registrate</h1>
    <h2> <%= (locals.message != undefined) ? message : '' ;%> </h2>
    <div class="div-back">
        <div class = 'div-center'>
            <div class = 'content'>
                <form action = '/signup' method = 'post'>
                    <div class = 'mb-3'>
                        <label class = 'form-label' for = 'firstName'>Nombre</label>
                        <input class = 'form-control' id = 'firstName' name = 'firstName' type = 'text' required>
                    </div>
                    <div class = 'mb-3'>
                        <label class = 'form-label' for = 'lastName'>Apellido Paterno</label>
                        <input class = 'form-control' id = 'lastName' name = 'lastName' type = 'text' required>
                    </div>
                    <div class = 'mb-3'>
                        <label class = 'form-label' for = 'secondLastName'>Apellido Materno</label>
                        <input class = 'form-control' id = 'secondLastName' name = 'secondLastName' type = 'text'>
                    </div>
                    <div class = 'mb-3'>
                        <label class = 'form-label' for = 'email'>E-mail</label>
                        <input class="form-control" id = 'email' name = 'email' type = 'email' required aria-describedby="emailHelp">
                        <div id="emailHelp" class="form-text">Tu correo esta asegurado en la bases de datos de la comunidad</div>
                    </div>
                    <div class = 'mb-3'> 
                        <label class = 'form-label' for = 'password'>Contraseña</label>
                        <input id = 'password' class = 'form-control' name = 'password' type = 'password' required>
                    </div>
                    <div class = 'mb-3'>
                        <label class = 'form-label' for = 'password'>Confirmar contraseña</label>
                        <input class = 'form-control' id = 'confirm_password' name = 'confirm_password' type = 'password' required>
                    </div>
                    <div class = 'mb-3'>
                        <label class = 'form-label' for = 'cellphone'>Celular</label>
                        <input class = 'form-control' id = 'cellphone' name = 'cellphone' type = 'text'>
                    </div>
                    <button class = 'btn submitButton' type = 'submit'>Registrarse</button>
                </form>
            </div>
        </div>
    </div>
<%- include('./partials/footer.ejs') %>